//-------------------------------------------------------------------------------
  @name: Header
  -------------------------------------------------------------------------------//

-
  dataHeader = {
    logoSrc: 'data-warehouse.svg',
    logoLink: 'index.html',
    logoAlt: 'Data Warehouse',
    menu: [
      {
        link: 'about.html',
        text: 'About',
        classActive: 'about'
      },
      {
        link: 'help.html',
        text: 'Help',
        classActive: 'help'
      },
      {
        link: 'features.html',
        text: 'Features',
        classActive: 'features'
      },
      {
        link: 'signup.html',
        text: 'Signup',
        classActive: 'signup'
      }
    ]
  };

//header
.header
  .container
    .header__nav
      ='\n'
      a.header__logo(href=dataHeader.logoLink)
        ='\n'
        img.header__logo__img(src='assets/img/logo/'+dataHeader.logoSrc, alt=dataHeader.logoAlt)/
        ='\n'
      ='\n'
      .header__nav__menu
        ul.header__nav__list
          each val in dataHeader.menu
            li.header__nav__item
              ='\n'
              a.header__nav__link(href=val.link class=(navActive == val.classActive ? 'header__nav__link--active' : '')) !{val.text}
              ='\n'
        .header__nav__btn
          a.btn.btn--white(href='#') Request Demo
            i.fi.fi-arrow-right
      ='\n'
      button.burger-menu.js-mobile-menu(type='button')
        each val in [0, 1, 2]
          ='\n'
          span.burger-menu__bar
='\n'
